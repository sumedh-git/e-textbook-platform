import React, { useState } from 'react';

function CreateETextbook() {
    const [textbook, setTextbook] = useState({
        title: '',
        description: ''
    });

    const handleChange = (e) => {
        setTextbook({ ...textbook, [e.target.name]: e.target.value });
    };

    const handleSubmit = async (e) => {
        e.preventDefault();
        // Call backend API to create e-textbook
        const response = await fetch('http://localhost:5000/api/admin/create-etextbook', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(textbook)
        });
        const data = await response.json();
        if (response.ok) {
            alert('E-textbook created successfully');
        } else {
            alert(data.error);
        }
    };

    return (
        <div>
            <h2>Create E-Textbook</h2>
            <form onSubmit={handleSubmit}>
                <label>Title:</label>
                <input type="text" name="title" value={textbook.title} onChange={handleChange} required />
                <br />
                <label>Description:</label>
                <textarea name="description" value={textbook.description} onChange={handleChange} required></textarea>
                <br />
                <button type="submit">Create E-Textbook</button>
            </form>
        </div>
    );
}

export default CreateETextbook;
